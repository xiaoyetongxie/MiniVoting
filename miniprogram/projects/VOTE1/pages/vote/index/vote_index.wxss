@import "../vote.wxss";

.vote-list {
	width: 100%;
	padding: 10rpx 20rpx;
}

.vote-list .item {
	width: 100%;
	padding: 15rpx;
	background-color: #fff;
	display: flex;
	flex-direction: column;
	align-items: flex-start;
	justify-content: flex-start;
	position: relative;
	margin-bottom: 25rpx;
	border-radius: 8rpx;
}

.vote-list .item .right-top {
	position: absolute;
	right: 0;
	top: 0;
	z-index: 99999;
	opacity: .8;
	display: flex;
	flex-direction: row;
}

.vote-list .item .right-top .triangle {
	width: 0;
	height: 0;
	border-top: 50rpx solid var(--mainColor2);
	border-left: 20rpx solid transparent;
} 

.bg-pink {
	background-color: var(--mainColor2) !important;
}

.vote-list .item .right-top .triangle.border-black {
	border-top: 50rpx solid #333333;
}

.vote-list .item .right-top .triangle.border-grey {
	border-top: 50rpx solid #8799a3;
}



.vote-list .item .right-top .status {
	font-size: 24rpx;
	padding: 0rpx 20rpx 0;
	height: 50rpx;
	line-height: 50rpx;
	color: #fff;
	background-color: var(--mainColor2);
}

.vote-list .item image {
	width: 100%;
	height: 360rpx;
	border-radius: 10rpx;
}

.vote-list .item .line {
	width: 100%;
	flex-direction: column;
	align-items: flex-start;
	justify-content: flex-start;
}

.vote-list .item .line {
	width: 100%;
	flex-direction: column;
	align-items: flex-start;
	justify-content: flex-start;
	padding: 0 10rpx;
	position: relative;
}

.vote-list .item .line .line1 {
	width: 100%;
	font-size: 32rpx;
	color: #000;
	line-height: 2.2;
	font-weight: bold;
}

.vote-list .item .line .line2,
.vote-list .item .line .line3 {
	width: 100%;
	font-size: 28rpx;
	color: #777;
	line-height: 1.8;
}

.vote-list .item .line .my-status {
	position: absolute;
	right: 0;
	bottom: 0;
}

.load-project {
	color:#fff!important;
}