@import "../../../../../style/public/detail.wxss";
@import "../vote.wxss";

page {
	background-image: unset !important;
	background-color: #fff !important;
}

.main {
	padding: 0 0;
	--mainColor: var(--color1--);
	--mainColor2: var(--color2--);
	background-image: linear-gradient(var(--mainColor), var(--mainColor2), var(--mainColor));
	padding-bottom: 200rpx;
	min-height: 100vh;
}


.vote-content {
	width: 100%;
	padding: 20rpx 20rpx 200rpx;
	display: flex;
	flex-direction: unset;
	align-items: flex-start;
	justify-content: flex-start;
}

.vote-content .content-inner {
	width: 100%;
	background-color: #fff;
	border-radius: 10rpx;
	min-height: 500rpx;
}

.vote-content .content-inner .line0 {
	width: 100%;
	text-align: center;
	padding: 50rpx 0 0rpx;
}

.vote-content .content-inner .line0 image {
	width: 200rpx;
	height: 200rpx;
	border-radius: 50%;
}

.vote-content .content-inner .line1 {
	width: 100%;
	font-size: 36rpx;
	padding: 20rpx;
	color: #000;
	text-align: center;
}

.vote-content .content-inner .line2 {
	width: 100%;
	font-size: 28rpx;
	padding: 10rpx 20rpx 10rpx 20rpx;
	text-align: center;
	color: var(--mainColor);  
	background-color: #f2f2f2;
}